{
    "manifest_version": 3,
    "name": "Dark Pattern Buster",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://localhost:3000/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons" : {
      "16" : "./icons/16.png",
      "32" : "./icons/32.png",
      "48" : "./icons/48.png",
      "128" : "./icons/128.png"
    }
  }
  